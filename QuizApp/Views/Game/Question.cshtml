@model QuizApp.Models.Question

@{
    ViewData["Title"] = "Question " + (ViewBag.Index);
    ViewData["HideNavbar"] = true;
}

<div class="h-card">
    <h2>Question @ViewBag.Index</h2>
</div>

<div class="question-card">
    <br />
    <p class="question-text">@Model.QuestionText</p><br />
</div>
<br />

<form method="post" action="/Game/Answer" class="answer-form">
    <div class="answer-options">
        @foreach (var answer in Model.Answers)
        {
            <button type="submit" name="answerId" value="@answer.Id" class="btn answer-btn">
                @answer.AnswerText
            </button>
        }
    </div>
</form>

<style>
    .container {
        background-color: #f4f7fc;
        padding: 40px;
        border-radius: 8px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        width: 100%;
        max-width: 600px;
        margin: auto;
        margin-top: 50px;
    }

    .h-card {
        background: #007bff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
        color: white;
    }

    .question-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .question-text {
        font-size: 20px;
        color: #333;
        margin-bottom: 10px;
    }

    .answer-options {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .btn {
        padding: 15px;
        font-size: 18px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        text-align: center;
        transition: background-color 0.3s;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>